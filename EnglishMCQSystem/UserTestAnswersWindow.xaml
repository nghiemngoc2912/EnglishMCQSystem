<Window x:Class="EnglishMCQSystem.UserTestAnswersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishMCQSystem"
        mc:Ignorable="d"
        Title="UserTestAnswersWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" Foreground="Red" FontWeight="Bold" FontSize="36"  x:Name="txtName"></TextBlock>
                <DataGrid x:Name="dgUserTestAnswer"></DataGrid>
                <Button Margin="5" Width="100" x:Name="btnTest" Click="btnTest_Click">Do the test again</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
