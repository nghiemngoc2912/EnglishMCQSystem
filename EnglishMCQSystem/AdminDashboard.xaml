<Window x:Class="EnglishMCQSystem.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishMCQSystem"
        mc:Ignorable="d"
        Title="AdminDashboard" Height="650" Width="1196">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- Navigation Bar -->
        <ListBox Background="AliceBlue" x:Name="Navigation" Width="170" SelectionChanged="Navigation_SelectionChanged">
            <ListBoxItem Foreground="Blue" FontSize="20" IsSelected="True" Content="Dashboard"/>
            <ListBoxItem Foreground="Blue" FontSize="20" Content="List of Users"/>
            <ListBoxItem Foreground="Blue" FontSize="20" Content="List of Tests"/>
            <ListBoxItem Foreground="Blue" FontSize="20" Content="List of Questions"/>
            <ListBoxItem Foreground="Blue" FontSize="20" Content="Home"/>
            <ListBoxItem Foreground="Blue" FontSize="20" Content="Log out"/>
        </ListBox>
        <Frame x:Name="ContentFrame" Grid.Column="1"/>

    </Grid>
</Window>
