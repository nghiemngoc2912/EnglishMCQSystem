<Window x:Class="EnglishMCQSystem.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglishMCQSystem"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- Navigation Bar -->
        <ListBox x:Name="Navigation" Width="150" SelectionChanged="Navigation_SelectionChanged">
            <ListBoxItem IsSelected="True" Content="Home"/>
            <ListBoxItem Content="Profile"/>
            <ListBoxItem Content="History"/>
        </ListBox>
        <Frame x:Name="ContentFrame" Grid.Column="1"/>
    </Grid>
</Window>
